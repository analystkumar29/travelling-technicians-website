{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install --force",
  "framework": "nextjs",
  "regions": ["sfo1"],
  "env": {
    "NEXT_PUBLIC_WEBSITE_URL": "https://www.travelling-technicians.ca",
    "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
  },
  "build": {
    "env": {
      "SHARP_IGNORE_GLOBAL_LIBVIPS": "1"
    }
  },

  "headers": [
    {
      "source": "/api/bookings/(.*)",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/send-confirmation",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/send-reschedule-confirmation",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/check-env",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/check-postal-code",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/pricing/(.*)",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/devices/(.*)",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/geocode",
      "headers": [
        {
          "key": "X-Vercel-Protection",
          "value": "bypass"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://www.travelling-technicians.ca"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "functions": {
    "src/pages/api/bookings/**/*.ts": {
      "maxDuration": 30
    },
    "src/pages/api/send-*.ts": {
      "maxDuration": 30
    },
    "src/pages/api/check-*.ts": {
      "maxDuration": 10
    }
  },

  "redirects": [
    {
      "source": "/contact/",
      "destination": "/contact",
      "permanent": true
    },
    {
      "source": "/service-areas/richmond/",
      "destination": "/repair/richmond",
      "permanent": true
    },
    {
      "source": "/service-areas/new-westminster/",
      "destination": "/repair/new-westminster",
      "permanent": true
    },
    {
      "source": "/service-areas/north-vancouver/",
      "destination": "/repair/north-vancouver",
      "permanent": true
    },
    {
      "source": "/service-areas/vancouver/",
      "destination": "/repair/vancouver",
      "permanent": true
    },
    {
      "source": "/service-areas/richmond",
      "destination": "/repair/richmond",
      "permanent": true
    },
    {
      "source": "/service-areas/new-westminster",
      "destination": "/repair/new-westminster",
      "permanent": true
    },
    {
      "source": "/service-areas/north-vancouver",
      "destination": "/repair/north-vancouver",
      "permanent": true
    },
    {
      "source": "/service-areas/vancouver",
      "destination": "/repair/vancouver",
      "permanent": true
    },
    {
      "source": "/privacy-policy/",
      "destination": "/privacy-policy",
      "permanent": true
    },
    {
      "source": "/terms-conditions/",
      "destination": "/terms-conditions",
      "permanent": true
    },
    {
      "source": "/doorstep",
      "destination": "/doorstep-repair",
      "permanent": true
    },
    {
      "source": "/doorstep/",
      "destination": "/doorstep-repair",
      "permanent": true
    },
    {
      "source": "/services/mobile",
      "destination": "/services/mobile-repair",
      "permanent": true
    }
  ],
  "github": {
    "silent": true
  },
  "trailingSlash": false
} 