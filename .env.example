# Example environment variables for The Travelling Technicians Website
# Copy this file to .env.local for development and .env.production for production

# Google Maps API key for the Places API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY

# SendGrid Configuration
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
SENDGRID_FROM_EMAIL=info@example.com
SENDGRID_FROM_NAME=Company Name
SENDGRID_TEMPLATE_ID=d-template-id-here

# Website Configuration
NEXT_PUBLIC_WEBSITE_URL=https://example.com
NEXT_PUBLIC_BASE_URL=http://localhost:3000 
NEXT_PUBLIC_API_URL=http://localhost:3000

# Authentication (for future implementation)
JWT_SECRET=example-secret-key-replace-in-production 