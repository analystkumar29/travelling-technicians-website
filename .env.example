# Example environment variables for The Travelling Technicians Website
# Copy this file to .env.local for development and .env.production for production

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
DIRECT_URL="postgresql://username:password@host:port/database?sslmode=require"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-supabase-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-public-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Google Maps API key for the Places API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# SendGrid Configuration
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="info@example.com"
SENDGRID_FROM_NAME="The Travelling Technicians"
SENDGRID_TEMPLATE_ID="d-template-id-here"

# Slack Notifications (Optional â€” skipped if not set)
SLACK_WEBHOOK_URL=""

# Website Configuration
NEXT_PUBLIC_SITE_URL="https://travelling-technicians.ca"
NEXT_PUBLIC_WEBSITE_URL="https://travelling-technicians.ca"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000"

# Authentication (for future implementation)
